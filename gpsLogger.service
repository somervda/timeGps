[Unit]
Description=GPS Logging service

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/home/pi/gpsLogger
# Path to the python interpreter in your virtual environment
ExecStart=/home/pi/timeGps/.venv/bin/python gpsLogger.py /home/pi
Restart=always
RestartSec=30


[Install]
WantedBy=multi-user.target
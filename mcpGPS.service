[Unit]
Description=MCP GPS Service
After=network.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/home/pi/timeGps
# Path to the python interpreter in your virtual environment
ExecStart=/home/pi/timeGps/.venv/bin/python mcpGPS.py /home/pi
Restart=always
RestartSec=30


[Install]
WantedBy=multi-user.target